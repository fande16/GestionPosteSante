{% extends 'base.html.twig' %}

{% block title %}Medecin{% endblock %}

{% block content%}
    <h1>Medecin</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ medecin.id }}</td>
            </tr>
            <tr>
                <th>Username</th>
                <td>{{medecin.utilisateur ? medecin.utilisateur.username : 'N/A'}}</td>
            </tr>
            <tr>
                <th>email</th>
                <td>{{medecin.utilisateur ? medecin.utilisateur.email : 'N/A'}}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ medecin.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ medecin.prenom }}</td>
            </tr>
            <tr>
                <th>Age</th>
                <td>{{ medecin.age }}</td>
            </tr>
            <tr>
                <th>Adresse</th>
                <td>{{ medecin.adresse }}</td>
            </tr>
            <tr>
                <th>Specialite</th>
                <td>{{ medecin.specialite }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ medecin.telephone }}</td>
            </tr>
        </tbody>
    </table>

    <div class="d-flex justify-content-end mb-3">
        <a href="{{ path('app_medecin_edit', {'id': medecin.id}) }}"class="btn btn-lg btn-primary">edit</a>
        {{ include('medecin/_delete_form.html.twig') }}
    </div>

    <a href="{{ path('app_medecin_index') }}">back to list</a>

{% endblock %}
